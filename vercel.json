{
  "version": 2,
  "builds": [
    { "src": "server.js", "use": "@vercel/node" },
    { "src": "**/*.{html,css,js,jpg,png,pdf,ico,svg,txt,xml}", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/send-email", "dest": "/server.js" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    { "src": "/sitemap.xml", "dest": "/sitemap.xml" },
    { "src": "/(.*)", "dest": "/$1" }
  ]
}